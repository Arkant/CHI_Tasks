{

    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",
   
    "description": "Adds a solid red border to all webpages matching mozilla.org.",
    "icons": {
      "48": "icons/border-48.png"
    },
  
    "applications": {
      "gecko": {
        "id": "nodesearcher@mozilla.org",
        "strict_min_version": "45.0"
      }
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts.js"]
      }
    ]
  
  }